name: Atualiza README do Perfil

on:
  push:
    branches:
      - main
  schedule:
    - cron: '0 0 * * *' # roda todo dia à meia-noite UTC

jobs:
  update-readme:
    runs-on: ubuntu-latest

    steps:
      # Checa o repositório
      - name: Checar repositório
        uses: actions/checkout@v3

      # Configura Node.js
      - name: Configurar Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      # Instala dependências (caso use scripts JS/TS)
      - name: Instalar dependências
        run: npm install

      # Rodar script de atualização do README
      - name: Atualizar README
        run: node scripts/update-readme.js

      # Commit e push automático
      - name: Commit e push
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git add README.md
          git diff --cached --quiet || git commit -m "Atualiza README automaticamente"
          git push
